<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/store_search_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <include layout="@layout/store_left_tab"/>

        <LinearLayout
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="216dp"
                android:layout_height="42dp"
                android:text="请先确定基本情况"
                android:textColor="#FFABABAB"
                android:textSize="11sp"
                android:gravity="center"
                />

            <LinearLayout
                android:id="@+id/speed_plan_divide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <View
                    android:layout_width="76dp"
                    android:layout_height="0.5dp"
                    android:background="#FFC2C2C2"
                    android:layout_gravity="center|left"
                    />
                <TextView
                    android:layout_width="44dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="快速方案"
                    android:textColor="#FF1D1D1F"
                    android:textSize="11sp"
                    />
                <View
                    android:layout_width="76dp"
                    android:layout_height="0.5dp"
                    android:background="#FFC2C2C2"
                    android:layout_gravity="center|right"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="66dp"
                android:layout_height="17dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:text="房屋结构选择"
                android:textColor="#FF1D1D1F"
                android:textSize="11sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.zte.zakker.find.util.MyNumberPicker
                    android:id="@+id/bed_room_number"
                    android:layout_width="42dp"
                    android:layout_height="32dp"
                    android:descendantFocusability="blocksDescendants"/>
                <TextView
                    android:layout_width="13dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"
                    android:text="室"
                    android:textColor="#FF1D1D1F"
                    android:textSize="13sp"
                    />

                <com.zte.zakker.find.util.MyNumberPicker
                    android:id="@+id/dining_room_number"
                    android:layout_width="42dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="13dp"
                    android:descendantFocusability="blocksDescendants"/>
                <TextView
                    android:layout_width="13dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"
                    android:text="厅"
                    android:textColor="#E61D1D1F"
                    android:textSize="13sp"
                    />

                <com.zte.zakker.find.util.MyNumberPicker
                    android:id="@+id/restroom_number"
                    android:layout_width="42dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="13dp"
                    android:descendantFocusability="blocksDescendants"/>
                <TextView
                    android:layout_width="13dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"
                    android:text="卫"
                    android:textColor="#E61D1D1F"
                    android:textSize="13sp"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="66dp"
                android:layout_height="17dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:text="家庭成员选择"
                android:textColor="#FF1D1D1F"
                android:textSize="11sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.zte.zakker.find.util.MyNumberPicker
                    android:id="@+id/family_members"
                    android:layout_width="42dp"
                    android:layout_height="32dp"
                    android:descendantFocusability="blocksDescendants"/>
                <TextView
                    android:layout_width="13dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"
                    android:text="人"
                    android:textColor="#E61D1D1F"
                    android:textSize="13sp"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="66dp"
                android:layout_height="17dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:text="偏好选择"
                android:textColor="#FF1D1D1F"
                android:textSize="11sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="38dp"
                    android:layout_height="32dp"
                    android:background="@drawable/prefer_normal_bg"
                    android:gravity="center"
                    android:text="宅"
                    android:textColor="#1D1D1F"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="66dp"
                    android:layout_height="32dp"
                    android:background="@drawable/prefer_choose_bg"
                    android:gravity="center"
                    android:layout_marginLeft="12dp"
                    android:text="健身狗"
                    android:textColor="#1C84FF"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="38dp"
                    android:layout_height="32dp"
                    android:background="@drawable/prefer_normal_bg"
                    android:layout_marginLeft="12dp"
                    android:gravity="center"
                    android:text="厨神"
                    android:textColor="#1D1D1F"
                    android:textSize="14sp"/>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:id="@+id/speed_plan_next"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/next_button_bg"/>

                <TextView
                    android:layout_width="128dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="下一步"
                    android:textColor="#FFFFFFFF"
                    android:textSize="15sp" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <View
                    android:layout_width="76dp"
                    android:layout_height="0.5dp"
                    android:background="#FFC2C2C2"
                    android:layout_gravity="center|left"
                    />
                <TextView
                    android:layout_width="44dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="量身定制"
                    android:textColor="#FF1D1D1F"
                    android:textSize="11sp" />
                <View
                    android:layout_width="76dp"
                    android:layout_height="0.5dp"
                    android:background="#FFC2C2C2"
                    android:layout_gravity="center|right"
                    />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/prefer_choose_bg">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:text="提供房屋的数据，根据自己的特定偏好，更精确的为您设计智能家庭方案。"
                    android:textColor="#1C84FF"
                    android:textSize="13sp"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:id="@+id/custom_made_next"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/next_button_bg"/>

                <TextView
                    android:layout_width="128dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="下一步"
                    android:textColor="#FFFFFFFF"
                    android:textSize="15sp" />
            </FrameLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>